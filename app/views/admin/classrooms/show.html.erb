<section class="page-title">
  <h1>Workshop: <%= @classroom.name%></h1>
</section>
<div class="quicknav-content">
  <%= link_to  'admin dashboard', admin_dashboard_index_path %> / <%= link_to  'my art', admin_artworks_path %> / <%= link_to  'my garments', admin_clothings_path %> /<%= link_to  'my workshops', admin_classrooms_path %>
</div><br>

<section id='navigation-links-individual'>
  <%= link_to 'Edit Workshop', "/admin/classrooms/#{@classroom.id}/edit", method: :get %>
  <%= link_to 'Delete Workshop', "/admin/classrooms/#{@classroom.id}", method: :delete %>
</section><br>

<section class="admin-classroom-details">
  <section class="admin-classroom-detail-category">
    <strong>Workshop Description:</strong>
  </section>
    <%= @classroom.description %><br><br>

  <section class="admin-classroom-detail-category">
    <strong>Workshop Image:</strong>
  </section>
    <%= image_tag(@classroom.image) %><br><br>

  <section class="admin-classroom-detail-category">
    <strong>Workshop Date:</strong>
  </section>
    <%= (@classroom.date).strftime("%A, %d %b %Y") %><br><br>

  <section class="admin-classroom-detail-category">
    <strong>Workshop Time:</strong>
  </section>
    <%= (@classroom.time).strftime("%I : %M %p") %><br><br>

  <section class="admin-classroom-detail-category">
    <strong>Workshop Location:</strong>
  </section>
    <%= @classroom.location %><br><br>

  <section class="admin-classroom-detail-category">
    <strong>Workshop's availability:</strong>
  </section>
    <%= @classroom.active_status %><br><br>

  <section class="admin-classroom-detail-category">
    <strong>Workshop's Cost:</strong>
  </section>
    <%= number_to_currency(@classroom.cost) %><br><br>
</section>

<section id="add-requirements">
  <%= button_to 'Add Requirements to a Workshop' %>
</section>

<section id="add-tools">
  <p><%= button_to 'Add Tools needed for a Workshop' %></p>
</section>
