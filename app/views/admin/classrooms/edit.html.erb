<h2><%= @classroom.name %> Edit Page</h2>

<%= form_for ([:admin, @classroom]) do |f| %>

  <%= f.label 'Name of Workshop: '%>
  <%= f.text_field :name %>

  <%= f.label 'Description of Workshop: '%>
  <%= f.text_field :description %>

  <%= f.label 'Image of Workshop: '%>
  <%= f.text_field :image %>

  <%= f.label 'Date of Workshop: '%>
  <%= f.date_field :date %>

  <%= f.label 'Time of Workshop: '%>
  <%= f.time_field :time %>
  <br>
  <%= f.label 'Location of Workshop: '%>
  <%= f.text_field :location %>

  <%= f.label 'Workshop is available (true/false): ' %>
  <%= f.label 'True'%>
  <%= f.radio_button :active, true %>
  <%= f.label 'False'%>
  <%= f.radio_button :active, false %>
  <br>
  <%= f.label 'Cost: '%>
  <%= f.number_field :cost, value: number_to_currency(f.object.cost.to_f, delimiter: '', unit: ''), step: :any %>

  <%= f.submit 'Update Workshop' %>
<% end %>
