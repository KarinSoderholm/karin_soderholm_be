<section class="page-title">
  <h1>Create a new Workshop!</h1>
</section>

<div class="quicknav-content">
  <%= link_to  'admin dashboard', admin_dashboard_index_path %> / <%= link_to  'my art', admin_artworks_path %> / <%= link_to  'my garments', admin_clothings_path %> / <%= link_to  'my workshop', admin_classrooms_path %>
</div><br>

<%= form_tag '/admin/classrooms', multipart: true  do %>
  <%= label_tag 'Name of Workshop: '%><br>
  <%= text_field_tag :name %><br>

  <%= label_tag 'Description of Workshop: '%><br>
  <%= text_field_tag :description %><br>

  <%# <%= label_tag 'Image for the Workshop: '%>
  <%# <%= text_field_tag :image %>


  <%= label_tag 'Date of Workshop: '%><br>
  <%= date_field_tag :date %><br>
  <br>
  <%= label_tag 'Time of Workshop: '%><br>
  <%= time_field_tag :time %><br>
  <br>
  <%= label_tag 'Location for the Workshop: '%><br>
  <%= text_field_tag :location %><br>

  <%= label_tag 'Cost: '%><br>
  <%= number_field_tag :cost, nil, min: 1, max: 100000, placeholder: '$' %><br>
  <br>
  <%= label_tag 'Workshop is available (yes/no): '%>
  <%= label_tag 'Yes'%>
  <%= radio_button_tag :active, true %>
  <%= label_tag 'No'%>
  <%= radio_button_tag :active, false %><br>
  <br>

  <%# <%= label_tag 'Add required tools to the Workshop' %>

  <%# <%= select_tag :tools_needed, options_for_select(["Sewing Machine", "Crochet Hooks", "Sewing Needles", "Yarn", "Fabric", "Elastic"]), include_blank: true %>

  <%# <%= label_tag 'Add requirements for the Workshop' %>
  <%# <%= select_tag :requirements, options_from_collection_for_select(@classrooms, "id", "name"), include_blank: true %>


  <%= label_tag 'Image for Workshop: '%><br>
  <%= file_field_tag :photos %>
  <br>
  <br>
  <%= submit_tag 'Submit Workshop' %>
<% end %>
