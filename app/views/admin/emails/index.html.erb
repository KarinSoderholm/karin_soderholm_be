<section class="page-title">
  <h1>My Email List</h1>
</section>

<div class="quicknav-content">
  <%= link_to  'admin dashboard', admin_dashboard_index_path %> 
</div>

<h3>Total Number of Collected Emails: <%= @emails.count %></h3>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email Address</th>
      <th>Edit Email</th>
      <th>Delete Email</th>
    </tr>
  </thead>
  <tbody>
    <% if @emails %>
      <% @emails.each do |email| %>
      <tr>
        <td><%= email.name %></td>
        <td><%= email.email_address %></td>
        <td><%= link_to 'Edit Email', "/admin/emails/#{email.id}/edit", method: :get %></td>
        <td><%= link_to 'Delete Email', "/admin/emails/#{email.id}/alert", method: :get %></td>
      <% end %>
    <% end %>
  </tbody>
</table>

<section class="new-email-button">
  <p><%= button_to 'Add a New Email', new_admin_email_path, method: :get  %></p>
</section>

<div class="import-csv">
  <%= form_tag import_admin_emails_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag 'Import Spreadsheet' %>
  <% end %>
</div>
