<section class="page-title">
  <h1><%= current_user.name %>'s CV</h1>
</section>

<div class="quicknav-content">
  <%= link_to  'admin dashboard', admin_dashboard_index_path %> / <%= link_to 'profile', admin_user_path(current_user) %>
</div>

<section id='navigation-links-individual'>
  <%= link_to 'Edit CV', "/admin/cv/#{@cv.id}/edit", method: :get %>
</section><br><br>

<section>
  <h5>Title: </h5><br>
  <p class="admin-cv-details-text"><%= @cv.name%></p>
</section>
<section>
  <h5>Document: </h5>
  <% if @cv.cv_file.attached? %>
    <section class="admin-cv-details-file">
      <iframe src="<%= rails_blob_path(@cv.cv_file, disposition: :inline) %>" height="1000" width="1000"></iframe>
    </section>
  <% else %>
    <p class="admin-cv-details-text">There is no file uploaded yet!</p>
  <% end %>

  <% if @cv.cv_file.attached? %>
    <section id="remove-file">
      <p><%= button_to "Remove CV from #{ current_user.name }", "/admin/cv/#{@cv.id}/remove_file/#{@cv.cv_file.id}", method: :delete, data: { confirm: "Are you sure?" } %></p>
    </section>
  <% end %>
</section>
