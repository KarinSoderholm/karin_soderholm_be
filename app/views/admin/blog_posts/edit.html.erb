<section class="page-title">
  <h2><%= @blog_post.title %> Edit Page</h2>
</section>

<div class="quicknav-content">
  <%= link_to  'admin dashboard', admin_dashboard_index_path %> / <%= link_to "#{@blog_post.title}", admin_blog_post_path(@blog_post) %> / <%= link_to "my blog posts", admin_blog_posts_path%>
</div><br>

<section class="admin-blog-post-layout-edit">
  <section class="admin-blog-post-card-edit">
    <section class="admin-blog-post-image-edit">
      <% if @blog_post.photos.attached? %>
        <p><%= image_tag(@blog_post.photos.first) %></p>
      <% else %>
        <p>There isn't an image uploaded, yet!</p>
      <% end %>
    </section>
    <section class="admin-blog-post-form-edit">
      <%= form_for ([:admin, @blog_post]) do |f| %>

        <%= f.label 'Name of Post: '%><br>
        <%= f.text_field :title %><br>

        <%= f.label 'Body of Blog Post: '%><br>
        <%= f.text_area :body, rows: 20, cols: 50 %><br>

        <%= f.label 'Tag of Post: '%><br>
        <%= f.select :tags, options_for_select(Tag.find_names.uniq.map { |name| name }) %><br>

        <%# <%= f.label 'Image of Post: '%>
        <%# <%= f.file_field :photos %>

        <%= f.submit 'Update Post' %>
      <% end %>
</section>
</section>
</section>
