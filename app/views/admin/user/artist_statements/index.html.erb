<section class="page-title">
  <h1>All the Artist Statements!</h1>
</section>

<div class="quicknav-content">
  <%= link_to  'admin dashboard', admin_dashboard_index_path %> / <%= link_to 'my art', admin_artworks_path %>/ <%= link_to  'my garments', admin_clothings_path %> / <%= link_to  'my workshops', admin_classrooms_path %>
</div><br>

<table>
  <thead>
    <tr>
      <th>Link to Artist Profile</th>
      <th>ID</th>
      <th>Statement</th>
      <th>Link to Edit</th>
      <th>Button to Delete</th>
    </tr>
  </thead>
  <tbody>
    <% if @artist_statements %>
      <% @artist_statements.each do |artist_statement| %>
      <tr>
        <td><%= link_to "#{current_user.name}'s Profile", "/admin/users/#{current_user.id}" %></td>
        <td><%= link_to "#{artist_statement.id}", "/admin/user/#{current_user.id}/artist_statement/#{artist_statement.id}", method: :get %></td>
        <td><%= artist_statement.statement %></td>
        <td><%= link_to "Edit #{artist_statement.id}", "/admin/user/#{current_user.id}/artist_statement/#{artist_statement.id}/edit", method: :get %></td>
        <td><%= button_to "Delete #{current_user}'s Artist Statement", "/admin/user/#{current_user.id}/artist_statement/#{artist_statement.id}", method: :delete %></td>
      </tr>
      <% end %>
    <% else %>
      <h5>There are no Artist Statements</h5>
    <% end %>
  </tbody>
</table>
