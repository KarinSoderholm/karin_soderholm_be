<section class="page-title">
  <h1>Edit Artist Statement:</h1>
</section>

<div class="quicknav-content">
  <%= link_to  'admin dashboard', admin_dashboard_index_path %> / <%= link_to "#{@user.name}'s artist statment", "/admin/users/#{@user.id}/artist_statement/#{@artist_statement.id}"%>/ <%= link_to "#{@user.name}'s profile", admin_users_path(@user) %>
</div><br>

<%= form_for [@artist_statement], url: "/admin/user/#{@user.id}/artist_statement/#{@artist_statement.id}/edit", method: :post do |f| %>
  <%= f.label :statement %><br>
  <%= f.text_area :statement, rows: 20, cols: 50 %><br>

  <%= f.submit 'Update Artist Statement' %>
<% end %>
