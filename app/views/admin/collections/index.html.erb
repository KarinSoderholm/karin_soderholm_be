<section class="page-title">
  <h2>All the Collections available</h2>
</section>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Edit Collection</th>
      <th>Delete Collection</th>
    </tr>
  </thead>
  <tbody>
    <% if @collections %>
      <% @collections.each do |collection| %>
      <tr>
        <td><%= link_to "#{collection.name}",  "/admin/collections/#{collection.id}", method: :get%></td>
        <td><%= link_to 'Edit Garment', "/admin/collections/#{collection.id}/edit", method: :get %></td>
        <td><%= link_to 'Delete Garment', "/admin/collections/#{collection.id}/alert", method: :get %></td>
        <td><%= collection.name %></td>
      </tr>
      <% end %>
    <% else %>
      <tr>There are no garmets currently in the system! Please add some!</tr>
    <% end %>
  </tbody>
</table>
