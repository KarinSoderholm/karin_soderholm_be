<h2><%= @clothing.name %> Edit Page</h2>
<%# <%= form_tag "/admin/clothings/#{@clothing.id}", method: :patch do %>
<%= form_for ([:admin, @clothing]) do |f| %>

  <%= f.label 'Name of Garment: '%>
  <%= f.text_field :name %>

  <%= f.label 'Description of Garment: '%>
  <%= f.text_field :description %>

  <%= f.label 'Image of Garment: '%>
  <%= f.text_field :image %>

  <%= f.label 'Link to Garment (optional): '%>
  <%= f.text_field :url %>

  <%= f.label 'Category of Garment: '%>
  <%= f.text_field :category %>

  <%= f.label 'Garment is available (yes/no): '%>
  <%= f.label 'Yes'%>
  <%= f.radio_button :available, true %>
  <%= f.label 'No'%>
  <%= f.radio_button :available, false %>
  <br>
  <%= f.label 'Garment was created on: '%>
  <%# <%= f.date_field :origin_date %>
  <%= f.date_select(:origin_date, start_date: 1995, discard_day: true, discard_month: true)%>
  <br>
  <%= f.label 'Cost: '%>
  <%= f.number_field :cost, value: number_to_currency(f.object.cost.to_f, delimiter: '', unit: ''), step: :any %>

  <%= f.submit 'Update Garment' %>
<% end %>
