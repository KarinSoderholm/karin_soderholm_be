<section class="page-title">
  <h1>All the Garments!</h1>
</section>

<div class="quicknav-content">
  <%= link_to  'admin dashboard', admin_dashboard_index_path %> / <%= link_to  'my artwork', admin_artworks_path %> / <%= link_to  'my workshops', admin_classrooms_path %>
</div><br>
<h3>Total Number of Garments: <%= @clothings.count %></h3>
<h3>Number of Garments Sold: <%= @clothings.total_sold %></h3>
<h3>Number of Garments Available for purchase: <%= @clothings.total_available %></h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Link to Edit</th>
      <th>Link to Delete</th>
      <th>Description</th>
      <th>Image</th>
      <th>Etsy Link</th>
      <th>Category</th>
      <th>Garment is Available</th>
      <th>Date of Creation</th>
      <th>Cost</th>
    </tr>
  </thead>
  <tbody>
    <% if @clothings %>
      <% @clothings.each do |clothing| %>
      <tr>
        <td><%= link_to "#{clothing.name}",  "/admin/clothings/#{clothing.id}", method: :get%></td>
        <td><%= link_to 'Edit Garment', "/admin/clothings/#{clothing.id}/edit", method: :get %></td>
        <td><%= link_to 'Delete Garment', "/admin/clothings/#{clothing.id}/alert", method: :get %></td>
        <td><%= clothing.description %></td>
        <% if clothing.image.attached? %>
          <td><%= image_tag(clothing.image) %></td>
        <% else %>
          <td>No image to display</td>
        <% end %>
        <td><%= clothing.url %></td>
        <td><%= clothing.category %></td>
        <td><%= clothing.availability? %></td>
        <td><%= (clothing.origin_date).strftime("%A, %d %b %Y") %></td>
        <td><%= number_to_currency(clothing.cost) %></td>
      </tr>
      <% end %>
    <% else %>
      <tr>There are no garmets currently in the system! Please add some!</tr>
    <% end %>
  </tbody>
</table>

<section class="new-clothing-button">
  <p><%= button_to 'Add a New Garment', new_admin_clothing_path, method: :get  %></p>
</section>


<div class="import-csv">
  <%= form_tag import_admin_clothings_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag 'Import Spreadsheet' %>
  <% end %>
</div>
