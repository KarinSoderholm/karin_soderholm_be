<section class="page-title">
  <h1>Garment: <%= @clothing.name %></h1>
</section>

<div class="quicknav-content">
  <%= link_to  'admin dashboard', admin_dashboard_index_path %> / <%= link_to  'my art', admin_artworks_path %> / <%= link_to  'my garments', admin_clothings_path %> /<%= link_to  'my workshops', admin_classrooms_path %>
</div><br>
<section id='navigation-links-individual'>
  <%= link_to 'Edit Garment', "/admin/clothings/#{@clothing.id}/edit", method: :get %>
  <%= link_to 'Delete Garment', "/admin/clothings/#{@clothing.id}", method: :delete %>
</section>

<section class="admin-garment-details">
  <section class="admin-garment-detail-category">
    Garment Description:
  </section>
    <%= @clothing.description %><br><br>

  <section class="admin-garment-detail-category">
    Garment Image:
  </section>
    <%= image_tag(@clothing.image) %><br><br>

  <section class="admin-garment-detail-category">
    Link to Etsy url:
  </section>
    <% if @clothing.url.nil? %>
      There is not a link available
    <% else %>
      <%= @clothing.url %>
    <% end %><br><br>

  <section class="admin-garment-detail-category">
    Garment Category:
  </section>
    <%= @clothing.category %><br><br>

  <section class="admin-garment-detail-category">
    Garment is
    <%= @clothing.availability? %><br><br>
  </section>

  <section class="admin-garment-detail-category">
    Garment's creation date:
  </section>
    <%= (@clothing.origin_date).strftime("%A, %d %b %Y") %><br><br>

  <section class="admin-garment-detail-category">
    Garment's MSRP:
  </section>
    <%= number_to_currency(@clothing.cost) %><br><br>
</section>

<section id="add-pattern">
  <p><%= button_to "Add pattern used to make #{@clothing.name}" %></p>
</section>

<section id="add-materials">
  <p><%= button_to "Add Fabrics used in making #{@clothing.name}" %></p>
</section>
