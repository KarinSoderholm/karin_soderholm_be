<section class="page-title">
  <h1>Specifics for <%= @order.find_user.name %>'s Order</h1>
</section>

<div class="quicknav-content">
  <%= link_to  'admin dashboard', admin_dashboard_index_path %> / <%= link_to  'my art', admin_artworks_path %> / <%= link_to  'my workshops', admin_classrooms_path %> / <%= link_to 'all orders', admin_orders_path %>
</div><br>

<div class="admin-order-layout-show">
  <section class="admin-order-order-number">
    <h2>Order Number: </h2><%= @order.id %>
  </section>
  <section class="admin-order-customer-details-show">
    <section class="admin-order-customer-name">
      <h3>Customer name: </h3><%= @order.find_user.name %><br><br>
    </section>
    <section class="admin-order-customer-email">
      <h3>Customer email: </h3><%= @order.find_user.email %><br><br>
    </section>
    <section class="admin-order-customer-address">
      <h3>Customer address: </h3><%= @order.find_user.full_address %><br><br>
    </section>
    ______________________________________________________________________
  </section>

  <section class="admin-order-details-show">
    <h2>Particulars about the Order:</h2>

    <h3>Status: </h3><%= @order.status %>
    <h3>Number of Items: </h3><%= @order.count_of_items %>

    <section class="admin-order-type-show">
      <h3>Artworks: </h3>
    </section>
      <table>
        <thead>
          <tr>
            <th>Item Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Item Total</th>
            <th><%= number_to_currency(@order.order_artworks.sub_total(@order)) %></th>
          </tr>
        </thead>
        <tbody>
          <% if @order.order_artworks %>
            <% @order.order_artworks.map do |order_artwork| %>
              <tr>
                <td><%= order_artwork.find_artwork.name %></td>
                <td><%= order_artwork.price %></td>
                <td><%= order_artwork.quantity %></td>
                <td><%= order_artwork.price * order_artwork.quantity %></td>
              </tr>
            <% end %>
          <% else %>
            <tr>There is no art in the order</tr>
          <% end %>
        </tbody>
      </table><br>

    <section class="admin-order-type-show">
      <h3>Workshops: </h3>
    </section>
      <table>
        <thead>
          <tr>
            <th>Item Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Item Total</th>
            <th><%= number_to_currency(@order.order_classrooms.sub_total(@order)) %></th>
          </tr>
        </thead>
        <tbody>
          <% if @order.order_classrooms %>
            <% @order.order_classrooms.map do |order_classroom| %>
              <tr>
                <td><%= order_classroom.find_classroom.name %></td>
                <td><%= order_classroom.price %></td>
                <td><%= order_classroom.quantity %></td>
                <td><%= order_classroom.price * order_classroom.quantity %></td>
              </tr>
            <% end %>
          <% else %>
            <tr>There is no art in the order</tr>
          <% end %>
        </tbody>
      </table><br>
    <!-- <h5>------------------------------------------------------</h5> -->

    <section class="admin-order-type-show">
      <h3>Objects: </h3>
    </section>
      <table>
        <thead>
          <tr>
            <th>Item Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Item Total</th>
            <th><%= number_to_currency(@order.order_clothings.sub_total(@order)) %></th>
          </tr>
        </thead>
        <tbody>
          <% if @order.order_clothings %>
            <% @order.order_clothings.map do |order_clothing| %>
              <tr>
                <td><%= order_clothing.find_clothing.name %></td>
                <td><%= order_clothing.price %></td>
                <td><%= order_clothing.quantity %></td>
                <td><%= order_clothing.price * order_clothing.quantity %></td>
              </tr>
            <% end %>
          <% else %>
            <tr>There is no art in the order</tr>
          <% end %>
        </tbody>
      </table><br>
    <!-- <h5>------------------------------------------------------</h5> -->
  </section>

  <section class="admin-order-total">
    <h2>Subtotal: </h2><%= number_to_currency(@order.subtotals) %>
  </section>
  <section class="admin-order-notes">

  </section>
  <!-- </section> -->
</div>
