<section class="page-title">
  <h2>Create a new Tag</h2>
</section>

<div class="quicknav-content">
  <%= link_to  'admin dashboard', admin_dashboard_index_path %> / <%= link_to 'my art', admin_artworks_path, method: :get %> / <%= link_to 'my collections', admin_collections_path, method: :get %> / <%= link_to  'my garments', admin_clothings_path %> / <%= link_to  'my student works', admin_student_works_path %> / <%= link_to  'my workshops', admin_classrooms_path %>
</div><br>

<section class="admin-tag-create">
  <%= form_tag admin_post_tag_create_path(@blog_post), multipart: true do %>

    <%= label_tag 'Title of the Tag: '%><br>
    <%= text_field_tag :title %><br>

    <%= hidden_field_tag :blog_post_id, @blog_post.id %>

    <section class="submit-admin-tag-new-button">
      <%= submit_tag 'Add Tag' %>
    </section>
  <% end %>
</section>
