<!DOCTYPE html>
<html>
  <head>
    <title>Karin Soderholm</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%# <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= stylesheet_link_tag "application", media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%# <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %> 
  </head>

  <body>
    <div class="top-menu">
      <div class="dropdown">
        <div class="menu-bar-container" hover="myFunction(this)">
          <div class="bar1"></div>
          <div class="bar2"></div>
          <div class="bar3"></div>
        </div>
        <div class="dropdown-content">
          <%= link_to 'About', '/about/1/bio' %>
          <%= link_to 'Art', artwork_collections_path %>
          <%= link_to 'Home', '/' %>
          <%= link_to 'Objects', physical_object_collections_path %>
          <%= link_to 'Student Works', student_works_path %>
          <%= link_to 'Workshops', '/classrooms' %>
          <%= link_to 'Log In', login_path unless current_user %>
          <% if current_user %>
            <%= link_to image_tag("bag.svg").html_safe, cart_path unless current_user && current_admin? %>
          <% if current_admin? %>
            <%= "_____________________________" %>
            <%= link_to 'Profile', "/admin/users/#{current_user.id}" %>
          <% else %>
            <%= link_to 'Profile', profile_path %>
          <% end %>

            <% if current_admin? %>
              <%= link_to 'Admin Dashboard', admin_dashboard_index_path %>
              <%= link_to 'All Users', admin_users_path %>
              <% if Contact.message_status_unread.count == 0 %>
              <%= link_to 'Messages', "/admin/contacts/#{current_user.id}/messages" %>
              <% else %>
              <%= link_to "Messages(#{Contact.message_status_unread.count})", "/admin/contacts/#{current_user.id}/messages" %>
              <% end %>
              <%= link_to 'My Art', admin_artworks_path %>
              <%= link_to 'My Artwork Statments', admin_art_artwork_statement_path %>
              <%= link_to 'My Collections', admin_collections_path %>
              <% if CommissionBloomingMap.commission_status_not_started.count == 0 %>
                <%= link_to 'My Commissions', admin_commission_blooming_maps_path %>
              <% else %>
                <%= link_to "My Commissions(#{CommissionBloomingMap.find_all_unfinished_commissed_maps})", admin_commission_blooming_maps_path %>
              <% end %>
              <%= link_to 'My Email List', admin_emails_path %>
              <%= link_to 'My Objects', admin_clothings_path %>
              <%= link_to 'My Student Works', admin_student_works_path %>
              <%= link_to 'My Workshops', admin_classrooms_path %>
            <% end %>
            <%= link_to 'Log Out', logout_path if current_user %>
          <% end %>
        </div>
      </div>
      <section class="logo-link">
        <p><%= link_to image_tag("KarinBestLogo.png", class: 'logo-image'), welcome_index_path %></p>
      </section>
      <% if current_admin? %>
        <section class="header-card-admin">
          <% if current_user.avatar.attached?%>
            <!-- <section class="link-profile"> -->
              <p class="link-profile"><%= link_to image_tag(current_user.avatar), admin_dashboard_index_path %></p><br>
            <!-- </section> -->
          <% else %>
            <!-- <section class="link-profile"> -->
              <p class="link-profile"><%= link_to "#{current_user.name}", "/admin/users/#{current_user.id}" %></p><br>
            <!-- </section> -->
          <% end %>
          <section class="unfinished-commissioned-work">
            <p style="border-radius: 50%; background-color: red; padding: .75em; margin: .75em; border: .75em"><%= CommissionBloomingMap.find_all_unfinished_commissed_maps %></p>
          </section>
        </section>
      <% elsif current_user %>
        <section class="link-profile">
          <p class="link-profile"><%= link_to "#{current_user.name}", profile_path %></p><br>
        </section>
      <% end %>
    </div>
    <!-- <nav class = 'topnav'> -->
      <!-- <p><%= link_to image_tag("KarinBestLogo.png", class: 'logo-image'), welcome_index_path %></p> -->
    <!-- </nav> -->
<!-- </nav> -->
    <% flash.each do |type, message| %>
      <% if type == 'alert'%>
        <p class="alert-flash"><%= message %></p>
      <% elsif type == 'success' %>
        <p class="success-flash"><%= message %></p>
      <% elsif type ==  'notice' %>
        <p class="notice-flash"><%= message %></p>
      <% elsif type ==  'error' %>
        <p class="error-flash"><%= message %></p>
      <% elsif type ==  'message' %>
        <p class="message-flash"><%= message %></p>
      <% else %>
        <p><%= message %></p>
      <% end %>
    <% end %>

    <%= yield %>
      <div class="static-footer">
        <footer class="main-footer main-footer-alt content-area" id="main-footer">
        <!-- <nav class = 'bottomnav'> -->
          <% if !current_admin? %>
            <section class="footer-row">
              <div class="footer-column">
                <div class="collections-section">
                  <div class="collections-section-artwork">
                    <%= link_to 'Artwork', "/artworks", class: "artworks-footer" %>
                  </div>
                  <div class="collections-section-commission">
                    <%= link_to 'Commission a Blooming Map', new_commission_blooming_map_path %>
                  </div>

                  <div class="collections-section-collection">
                    <%= link_to 'Collections', "/collections", class: "collections-footer" %>
                  </div>
                  <div class="collections-section-clothing">
                    <%= link_to 'Garments', "/clothings", class: "clothings-footer" %>
                  </div>

                  <div class="collections-section-student-work">
                    <%= link_to 'Student Works', student_works_path, class: "student-works-footer" %>
                  </div>
                  <div class="collections-section-classroom">
                    <%= link_to 'Workshops', "/classrooms", class: "classrooms-footer" %>
                  </div>
                </div>
              </div>

              <div class="footer-column">
                <div class="about-section">
                  <div class="about-section-title">
                    <p class="about">About</p>
                  </div>
                  <div class="about-text">
                    <%= link_to 'About', "/about/1/bio" %>
                    <%= link_to 'Contact', "/about/1/contact" %>
                    <%= link_to 'FAQ', '/about/1/faq' %>
                    <%= link_to 'CV', '/about/1/cv' %>
                  </div><br>

                  <nav class="social">
