<!DOCTYPE html>
<html>
  <head>
    <title>Karin Soderholm</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%# <%= stylesheet_link_tag    "application.scss" %>
    <%# <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %> 
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class = 'topnav'>
      <%= link_to 'Home', welcome_index_path %>
      <%# <%= link_to 'Register', registration_path unless current_user %>
      <%= link_to 'Log In', login_path unless current_user %>
      <%= link_to 'Workshops', '/classrooms' %>
      <%# <%= link_to 'Items', '/items' %>
      <%= link_to 'Garments', '/clothings' %>
      <%= link_to 'Artwork', '/artworks' %>
      <% if current_user %>
        <%= link_to 'Log Out', logout_path %>
        <%= link_to 'Profile', profile_path %>
        <%# <%= link_to "Cart: #{cart.count}", cart_path unless current_user && current_admin? %>
        <p class="logged-in-user">Logged in as <%= current_user.name %></p>
        <% if current_admin? %>
          <%= link_to 'Admin Dashboard', admin_dashboard_index_path %>
          <%= link_to 'My Email List', admin_emails_path %>
          <%= link_to 'My Workshops', admin_classrooms_path %>
          <%= link_to 'My Art', admin_artworks_path %>
          <%= link_to 'My Garments', admin_clothings_path %>
        <% end %>
      <% end %>
    </nav>

    <%# <% flash.each do |type, msg| %>
      <!-- <div class="alert-info"> -->
        <%# <%= msg %>
      <!-- </div> -->
    <%# <% end %>
    <% flash.each do |type, message| %>
      <% if type == 'alert'%>
        <p class="alert-flash"><%= message %></p>
      <% elsif type == 'success' %>
        <p class="success-flash"><%= message %></p>
      <% elsif type ==  'notice' %>
        <p class="notice-flash"><%= message %></p>
      <% elsif type ==  'error' %>
        <p class="error-flash"><%= message %></p>
      <% elsif type ==  'message' %>
        <p class="message-flash"><%= message %></p>
      <% else %>
        <p><%= message %></p>
      <% end %>
    <% end %>

    <%= yield %>
      <nav class = 'bottomnav'>
        <% if !current_user || !current_admin?   %>
          <div class="subscribe-text">
            <h4>Subscribe</h4>
            <h4>Be the first to know whats going on in Karin's Community!</h4>
          </div>
          <div class="subscribe-form">
          <%= form_tag '/emails' do %>
            <%= label_tag :name %><br>
            <%= text_field_tag :name %><br>

            <%= label_tag :email_address %><br>
            <%= email_field_tag :email_address %><br>
            <%= submit_tag "Subscribe" %>
          <% end %>
          </div>
        <% end %>
      </nav>
  </body>
</html>
