<!DOCTYPE html>
<html>
  <head>
    <title>Karin Soderholm</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%# <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= stylesheet_link_tag "application", media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="top-menu">
      <div class="dropdown">
        <div class="menu-bar-container" hover="myFunction(this)">
          <div class="bar1"></div>
          <div class="bar2"></div>
          <div class="bar3"></div>
        </div>
        <div class="dropdown-content">
          <%= link_to 'About', '/about/1/bio' %>
          <%= link_to 'Workshops', '/classrooms' %>
          <%= link_to 'Garments', '/clothings' %>
          <%= link_to 'Artwork', '/artworks' %>
          <%= link_to 'Log In', login_path unless current_user %>
          <% if current_user %>
            <%= link_to image_tag("bag.svg").html_safe, cart_path unless current_user && current_admin? %>
          <% if current_admin? %>
            <%= link_to 'Profile', "/admin/users/#{current_user.id}" %>
          <% else %>
            <%= link_to 'Profile', profile_path %>
          <% end %>
          <%# <!-- <p class='logged-in-user-logout'><%= link_to 'Log Out', logout_path %>
            <% if current_admin? %>
              <%= link_to 'Admin Dashboard', admin_dashboard_index_path %>
              <%= link_to 'My Email List', admin_emails_path %>
              <%= link_to 'My Workshops', admin_classrooms_path %>
              <%= link_to 'My Art', admin_artworks_path %>
              <%= link_to 'My Garments', admin_clothings_path %>
              <%= link_to 'All Users', admin_users_path %>
              <%= link_to 'Messages', "/admin/contacts/#{current_user.id}/messages" %>
            <% end %>
            <%= link_to 'Log Out', logout_path if current_user %>
          <% end %>
        </div>
      </div>
    </div>
    <nav class = 'topnav'>
      <p><%= link_to image_tag("KarinBestLogo.png", class: 'logo-image'), welcome_index_path %></p>
    </nav>
<!-- </nav> -->
    <% flash.each do |type, message| %>
      <% if type == 'alert'%>
        <p class="alert-flash"><%= message %></p>
      <% elsif type == 'success' %>
        <p class="success-flash"><%= message %></p>
      <% elsif type ==  'notice' %>
        <p class="notice-flash"><%= message %></p>
      <% elsif type ==  'error' %>
        <p class="error-flash"><%= message %></p>
      <% elsif type ==  'message' %>
        <p class="message-flash"><%= message %></p>
      <% else %>
        <p><%= message %></p>
      <% end %>
    <% end %>

    <%= yield %>
      <div class="static-footer">
        <footer class="main-footer main-footer-alt content-area" id="main-footer">
        <!-- <nav class = 'bottomnav'> -->
          <% if !current_admin?   %>
            <section class="footer-row">
              <div class="footer-column">
                <div class="collection-section">
                  <div class="container">
                    <div class="header-contact">
                      <p class="collections">Collections</p>
                    </div>
                    <div class="collection-text">
                      <% collections = Collection.all %>
                      <% collections.each do |collection| %>
                        <%= link_to collection.name, "/collections/#{collection.id}", method: :get %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>

              <div class="footer-column">
                <div class="about-section">
                  <div class="container">
                    <div class="header-contact">
                      <p class="about">About</p>
                    </div>
                    <div class="about-text">
                      <%= link_to 'About', "/about/1/bio", method: :get %>
                      <%= link_to 'Contact', "/about/1/contact", method: :get %>
                      <%= link_to 'FAQ', about_index_path, method: :get %>
                    </div>
                  </div>
                </div>
              </div>
              <div class="footer-column">
                <div class="subscription-section"
                  <div class="container">
                    <div class="header-contact">
                      <p class="kit">Keep in Touch!</p>
                    </div>
                      <div class="subscribe-text">
                      <h4>Be the first to know whats </h4>
                      <h4>going on in Karin's Community!</h4>
                    </div>
                    <div class="subscribe-form"
                      <%= form_tag '/emails', method: 'post', :class => 'form-inline' do %>
                        <!-- <div class="form-group-text">
                          <%= label_tag :name %>
                        </div> -->
                        <!-- <div class="form-group"> -->
                          <%= text_field_tag :name, nil, class: 'form-inline', placeholder: 'Your name' %>
                        <!-- </div> -->
                        <!-- <div class="form-group-text">
                          <%= label_tag :email_address %><br>
                        </div> -->
                        <!-- <div class="form-group"> -->
                          <%= email_field_tag :email_address, nil, class: 'form-inline', placeholder: 'email@example.com' %><br>
                        <!-- </div>
                        <div class="form-group"> -->
                          <%= submit_tag "Subscribe" %>
                          <%# <% binding.pry %>
                        <!-- </div> -->
                      <% end %>
                    </div>
                    <nav class="social">
                      <div class="social-links">
                        <% if find_pinterest  %>
                        <%# <% binding.pry%>
