<section class="page-title">
  <h1>Commission a BloomingMap!</h1>
</section>
<div class="quicknav-content">
  <div class="quicknav-dropdown">
    <ul class="dropdown-row">
      <li class="page-collection">
        <%= link_to 'home', welcome_index_path %>
      </li>
      <li class="folder-collection">
        <div class="quicknav-menu-bar-container" hover="myFunction(this)">
          <%= link_to 'art', artwork_collections_path %>
        </div>
        <div class="quicknav-dropdown-content">
          <ul>
            <li class="page-collection">
              <%= link_to 'all art', artworks_path %>
            </li>
            <% Collection.find_artworks.map do |collection| %>
              <li class="page-collection">
                <%= link_to collection.name, "/artwork/collections/#{collection.id}" %>
              </li>
            <% end %>
          </ul>
        </div>
      </li>
      <li class="folder-collection">
        <div class="quicknav-menu-bar-container" hover="myFunction(this)">
          <%= link_to 'objects', physical_object_collections_path %>
        </div>
        <div class="quicknav-dropdown-content">
          <ul>
            <li class="page-collection">
              <%= link_to 'all objects', clothings_path %>
            </li>
            <% Collection.find_objects.map do |collection| %>
              <li class="page-collection">
                <%= link_to collection.name, "/physical_object/collections/#{collection.id}" %>
              </li>
            <% end %>
          </ul>
        </div>
      </li>
      <li class="folder-collection">
        <div class="quicknav-menu-bar-container" hover="myFunction(this)">
          <%= link_to 'student works', student_works_path %>
        </div>
        <div class="quicknav-dropdown-content">
          <ul>
            <li class="page-collection">
              <%= link_to 'adult student works', adult_student_work_path %>
            </li>
            <li class="page-collection">
              <%= link_to 'youth student works', youth_student_work_path %>
            </li>
          </ul>
        </div>
      </li>
      <li class="page-collection">
        <%= link_to 'workshops', classrooms_path %>
      </li>
      <li class="folder-collection">
        <div class="quicknav-menu-bar-container" hover="myFunction(this)">
          <%= link_to 'blog posts', blog_posts_path %>
        </div>
        <div class="quicknav-dropdown-content">
          <ul>
            <% BlogPost.format_monthly_blog_date.uniq.map do |month_of_post| %>
              <li class="page-collection">
                <%= link_to month_of_post[0], "/blog_posts/monthly_blogs/#{month_of_post[1]}/#{month_of_post[2]}" %>
              </li>
            <% end %>
          </ul>
        </div>
      </li>
    </ul>
  </div>
</div>
<div class="commission-new-map">
  <%= form_tag '/commission_blooming_maps' do %>
    <%= label_tag 'Your Name: *' %>
    <%= text_field_tag :customer_name %><br>

    <%= label_tag 'Your email address: *' %>
    <%= text_field_tag :customer_email %><br>

    <%= label_tag 'Your phone number: *' %>
    <%= telephone_field_tag :customer_phone, nil, placeholder: '(000)000-000' %><br>

    <%= label_tag 'A message to the Maker: *' %>
    <%= text_area_tag :message, nil, rows: 20, cols: 50 %><br>

    <%= label_tag 'Please let the Maker know the particulars!' %><br>

    <%= label_tag 'The city of your map: ' %>
    <%= text_field_tag :map_city %><br>

    <%= label_tag 'The state of your map: ' %>
    <%= text_field_tag :map_state %><br>

    <%= label_tag 'The country of your map: ' %>
    <%= text_field_tag :map_country %><br>

    <%= label_tag 'The flower included in your map: ' %>
    <%= text_field_tag :map_flower %><br>

    <%= label_tag "Are there colors you'd like included in your map? " %>
    <%= text_field_tag :map_color %><br>

    <%= hidden_field_tag :commission_status, :not_started %>


    <%= submit_tag 'Submit Your Map Idea!' %>
  <% end %>
</div>
