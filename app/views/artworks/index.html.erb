<h1>Karin's Artwork</h1>

<% if @artworks %>
  <% @artworks.each do |artwork| %>
    <h2><%= artwork.name %></h2>
    <% if artwork.available || artwork.sell_date != nil %>
      <%= link_to(image_tag(artwork.image), artwork_path(artwork), id: 'artwork') %>
    <% else %>
      <%= image_tag(artwork.image) %>
    <% end %>
    <h3>Description: <%= artwork.description %></h3>
    <h3>This piece is <%= artwork.availability? %></h3>
    <h3>Cost: <%= number_to_currency(artwork.cost) %></h3>
    <br>
  <% end %>
<% else %>
  <h3>There are no garments available at this time! Check back soon!</h3>
<% end %>
